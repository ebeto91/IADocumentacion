@inherits ModalRatingBase


<Modal @ref="ModalRef" OnCloseAsync="CloseModalSend">
    <ModalDialog IsCentered="true" Title="Clasificación" ShowCloseButton="false" ShowSaveButton="false" ShowHeaderCloseButton="true" Size="Size.Medium">
        <BodyTemplate>
            @if (_managementProfileDto != null)
            {
                <EditForm Model="@_managementProfileDto" Context="formContext">
                    <div class="row">

                        <div class="mt-2 col-lg-12">
                            <label>Título  </label>
                            <InputText class="form-control disable" @bind-Value="_managementProfileDto.Title" readonly></InputText>
                            <ValidationMessage For="@(() => _managementProfileDto.Title)" />
                        </div>

                        <div class="mt-2 col-lg-12">
                            <label>Número resolución final  </label>
                            <InputText class="form-control disable" @bind-Value="_managementProfileDto.ResolutionNumber" readonly></InputText>
                            <ValidationMessage For="@(() => _managementProfileDto.ResolutionNumber)" />
                        </div>

                        <div class="mt-2 col-lg-12">
                            <label>Razón de resolución  </label>
                            <Textarea class="form-control disable" rows="4" @bind-Value="@_managementProfileDto.ResolutionReason" readonly />
                            <ValidationMessage For="@(() => _managementProfileDto.ResolutionReason)" />
                        </div>
                        <div class="divider-data mt-2 mb-2"></div>

                        <div class="mt-3 mb-3 col-lg-12 text-center">
                            <label>Clasificación </label>
                            <Rate  @bind-Value="@_managementProfileDto.Rating" />
                        </div>

                        <div class="col-sm-12">
                            <Button Text="Clasificar" Icon="bi bi-star-fill" @onclick="()=>SendClasification(formContext)" />
                        </div>
                    </div>
                </EditForm>
              
            }


        </BodyTemplate>
    </ModalDialog>
</Modal>