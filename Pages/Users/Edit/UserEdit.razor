@page "/catalogo/usuarios/editar/{userId}"
@inherits UserEditBase


<div class="container-fluid">

    <!-- ========== title-wrapper start ========== -->
    <div class="title-wrapper pt-30">
        <div class="row align-items-center header-container">
            <div class="col">
                <div class="title container-title">
                    <h3 class="principal-title">Mantenimiento de usuarios - editar</h3>
                </div>
            </div>
            <!-- end col -->
            <div class="col">
                <div class="breadcrumb-wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a>Cátalogo</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Usuarios
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- ========== title-wrapper end ========== -->
    <!-- Invoice Wrapper Start -->
    <div class="invoice-wrapper">
        <div class="row">
            <div class="col-12">
                <div class="invoice-card card-style mb-30">
                    <div class="m-2">
                        <Button Text="Volver" Icon="bi bi-arrow-left" @onclick="goToList" />
                    </div>
                    <EditForm Model="@Model" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
                        <DataAnnotationsValidator />
                        <div class="row">
                            <div class="mt-3 col-lg-6 col-sm-12">
                                <div class="form-group ">
                                    <label>Nombre *</label>
                                    <InputText class="form-control" @bind-Value="Model.Name"></InputText>
                                    <ValidationMessage For="@(() => Model.Name)" />
                                </div>
                            </div>
                            <div class="mt-3 col-lg-6 col-sm-12">
                                <div class="form-group ">
                                    <label>Apellidos *</label>
                                    <InputText class="form-control" @bind-Value="Model.Lastname"></InputText>
                                    <ValidationMessage For="@(() => Model.Lastname)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="mt-3 col-lg-6 col-sm-12">
                                <div class="form-group ">
                                    <label for="tipoCedula">Tipo Cédula *</label>
                                    <Select OnSelectedItemChanged="OnItemChanged" Items="listIdentificationType" id="tipoCedula" @bind-Value="Model.IdentificationTypeId"></Select>
                                    <ValidationMessage For="@(() => Model.IdentificationTypeId)" />
                                </div>
                            </div>
                            <div class="mt-3 col-lg-6 col-sm-12">
                                <div class="form-group ">
                                    <label>Identificación *</label>
                                    <InputText class="form-control" @bind-Value="Model.Identification"></InputText>
                                    <ValidationMessage For="@(() => Model.Identification)" />
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="mt-3 col-lg-6 col-sm-12">
                                @if (showForEditDropdown)
                                {
                                    <div class="form-group">
                                        <label>Rol Usuario *</label>
                                        <Select Items="listRoles" @bind-Value="Model.RoleId"></Select>
                                        <ValidationMessage For="@(() => Model.RoleId)" />
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label>Rol Usuario *</label>
                                        <InputText class="form-control" @bind-Value="Model.RoleName" readonly></InputText>
                                    </div>
                                }

                            </div>

                            <div class="mt-3 col-lg-6 col-sm-12">
                                <div class="form-group ">
                                    <label>Correo Electrónico *</label>
                                    <InputText class="form-control" @bind-Value="Model.EmailAddress" type="email"></InputText>
                                    <ValidationMessage For="@(() => Model.EmailAddress)" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="mt-3 col-lg-6 col-sm-12">
                                <div class="form-group ">
                                    <label>Teléfono </label>
                                    <InputText class="form-control" @bind-Value="Model.PhoneNumber" type="number"></InputText>
                                    <ValidationMessage For="@(() => Model.PhoneNumber)" />
                                </div>
                            </div>


                        </div>

                        <div class="row custom-buttons">
                            <div class="d-flex-center col-12">
                                <AuthorizeScopeDirective Scope="Edit:User">
                                    <div class="input-submit-icon button-general-form">
                                        <input type="submit" value="Editar" />
                                    </div>
                                </AuthorizeScopeDirective>

                            </div>
                        </div>
                    </EditForm>
                </div>
                <!-- End Card -->
            </div>
            <!-- ENd Col -->
        </div>




    </div>
</div>

