@using RAS823_MC_CiudadMunicipal_FrontEnd.Dto.Users
@inherits EditControlAssignUsersBase
<div>

    <EditForm Model="userDepartmentDtoForEdit" FormName="EditFormData" OnValidSubmit="HandleFormValid">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="mt-3 col-lg-6 col-sm-12">
                <div class="form-group marginCustom">
                    <label>Nombre Colaborador</label>
                    <InputText class="form-control" @bind-Value="userDepartmentDtoForEdit.Name" readonly></InputText>
                </div>
            </div>
            <div class="mt-3 col-lg-6 col-sm-12">
                <div class="form-group marginCustom">
                    <label>Apellido Colaborador</label>
                    <InputText class="form-control" @bind-Value="userDepartmentDtoForEdit.Lastname" readonly></InputText>
                    @* <ValidationMessage For="@(() => userDepartmentDtoForEdit.EmailAddress)" /> *@
                </div>
            </div>
            <div class="mt-3 col-12">
                <div class="form-group marginCustom">
                    <label>Puesto Colaborador *</label>

                    <Select Items="items"
                            @bind-Value="userDepartmentDtoForEdit.Position"></Select>
                    <ValidationMessage id="msgErrorLengt" For="@(() => userDepartmentDtoForEdit.Position)" />

                </div>
            </div>
            <div class="mt-3 col-12col-sm-12">
                <div class="form-group marginCustom">
                    <label>Descripción (Opcional)</label>
                    <InputText class="form-control" @bind-Value="userDepartmentDtoForEdit.Description"></InputText>
                    @* <ValidationMessage For="@(() => userDepartmentDtoForEdit.EmailAddress)" /> *@
                </div>
            </div>
        </div>
        <div class="row custom-buttons">
            <div class="d-flex-center col-md-6 col-sm-12">
                <AuthorizeScopeDirective Scope="AssingUser:Department">
                    <div class="input-submit-icon button-general-form">
                        <input type="submit" value="Editar" />
                    </div>
                </AuthorizeScopeDirective>

            </div>

            <div class="d-flex-center col-md-6 col-sm-12">
                <button type="button" class="custom-button-close button-general-form" @onclick="CloseModal">
                    Cancelar
                </button>
            </div>
        </div>



    </EditForm>



</div>
