                    <Button Text="Crear Encuesta" Icon="bi bi-plus" @onclick="()=>createNewInternal()" />
                    </div>
                    <div class="form-group customGroupSurvey">
                        <label for="memoria">Seleccione Participación</label>
                        <Select Items="listSelectType" OnSelectedItemChanged="OnItemChanged" @bind-Value="surveyVoteInputFilterDto.TypeSurvey"></Select>

                    </div>


                    <ListSurveyVote SurveyVoteRegisterUserInternal="true" @ref="listSurveyVote"></ListSurveyVote>



                </div>
                <!-- End Card -->

            </div>
            <!-- ENd Col -->
        </div>




    </div>
</div>


