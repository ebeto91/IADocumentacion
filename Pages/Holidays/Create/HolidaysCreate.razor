@* @page "/respuestasPredeterminadas/crear" *@
@* @ref="ModalCreate" *@
@inherits HolidaysCreateBase
<Modal @ref="ModalRef" OnCloseAsync="CloseModalSend">
    <ModalDialog IsCentered="true" Title="Creación fecha de cierre"  ShowCloseButton="false" ShowSaveButton="false" ShowHeaderCloseButton="true" Size="Size.Medium">
        <BodyTemplate>

            <div>

                <EditForm Model="holidayManagementDto" FormName="CreateForm" OnValidSubmit="HandleFormValid">
                    <DataAnnotationsValidator />
                    <div class="row">
                        <div class="mt-3 col-12">
                            <div class="form-group marginCustom">
                                <label>Descripción de fecha de cierre *</label>
                                <InputText class="form-control" @bind-Value="holidayManagementDto.Description"></InputText>
                                <ValidationMessage For="@(() => holidayManagementDto.Description)" />
                            </div>
                        </div>

                        <div class="mt-3 col-12">
                            <div class="form-group marginCustom">
                                <label>Seleccionar fecha de cierre *</label>
                                <DateTimePicker @bind-Value="holidayManagementDto.DateSelected" @ref="_picker1"
                                                OnGetDisabledDaysCallback="OnGetDisabledDaysCallback" />
                                <ValidationMessage For="@(() => holidayManagementDto.DateSelected)" />
                            </div>
                        </div>

                      


                    </div>

                    <div class="row custom-buttons">
                        <div class="d-flex-center col-md-6 col-sm-12">
                            <AuthorizeScopeDirective Scope="Create:Holiday">
                                <div class="input-submit-icon button-general-form">
                                    <input type="submit" value="Agregar">
                                </div>
                            </AuthorizeScopeDirective>

                        </div>

                        <div class="d-flex-center col-md-6 col-sm-12">
                            <button type="button" class="custom-button-close button-general-form" @onclick="CloseModal">
                                @* <i class="bi bi-x"></i> *@
                                Cancelar
                            </button>
                        </div>
                    </div>

                </EditForm>



            </div>

        </BodyTemplate>
    </ModalDialog>
</Modal>



